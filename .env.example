# ArmGuard Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Django Secret Key (generate new one for production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database settings (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgres://username:password@localhost:5432/armguard_db
# Or individual settings:
# DB_NAME=armguard_db
# DB_USER=armguard_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Email settings (for password reset, notifications, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Media files URL (for QR codes, pictures)
# MEDIA_URL=/media/
# MEDIA_ROOT=/path/to/media

# Static files URL
# STATIC_URL=/static/
# STATIC_ROOT=/path/to/staticfiles

# Security settings (enable for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
